
<div class = "container">
  <div class = "row">
    <div class = "col-lg-4">
      <%= render '/common/userinfo&newbook', book: @book, user: @user %>
    </div>

    <div class = "col-lg-8">
      <h1>Books</h1>
      <table class = "tabel table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag book.get_image %>
              <% end %>
            </th>
            <th>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </th>
            <th>
              <%= book.body %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>