<div class = "main">
  <div class = "main-sidebar">
    <%= render '/common/userinfo&newbook', book: @book, user: @user %>
  </div>

  <div class = "main-content">
    <h2>Users</h2>

    <table>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <th>
            <%= image_tag user.get_profile_image(50,50) %>
          </th>
          <th>
            <%= user.name %>
          </th>
          <th>
            <%= link_to "Show", user_path(user.id) %>
          </th>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>