<div class = "main">
  <div class = "main-sidebar">
    <%= render '/common/userinfo&newbook', book: @book, user: @user %>
  </div>

  <div class = "main-content">
    <h1>Books</h1>
    <table class = "main-table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <th>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag book.get_image %>
              <%= @user.name %>
            <% end %>
          </th>
          <th>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </th>
          <th>
            <%= book.body %>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>